extends ./layouts/default
block content
  include ./components/nav
  div.container
    h2 Patients
    .row
      for patient in patients
        .col.s12.m4
          .card.blue-grey.darken-3
            .card-content.white-text
              span.card-title= patient.PName
              ul.collection.blue-grey
                li.collection-item.blue-grey.darken-1= "HCN: "+patient.Hcn
                li.collection-item.blue-grey.darken-1= "Gender: "+patient.Gender
                li.collection-item.blue-grey.darken-1= "Date of Birth: "+patient.BirthDate.toLocaleDateString()
                li.collection-item.blue-grey.darken-1= "Address: "+patient.Address
                li.collection-item.blue-grey.darken-1= "Telephone: "+patient.Telephone
